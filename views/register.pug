extends main.pug
block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.mb-3 Rejestracja
        form
          .mt-1.mb-1.text-danger Błąd rejestracji
          .mb-3
            label.form-label(for='username') Nazwa użytkownika
            input.form-control(type='text' name='username')
            .mt-1.text-danger Błąd nazwy użytkownika
          .mb-3
            label.form-label(for='password') Hasło
            input.form-control(type='password' name='password')
            .mt-1.text-danger Błąd hasła
          .mb-3.d-grid
            button.btn.btn-primary(type='submit' click='register()') Zarejestruj sie
